@model IEnumerable<MvcMovie.Models.Movie>

//Script
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <!--Nombre del link, y la acción-->
    @Html.ActionLink("Create New", "Create")
    <!--Accion, controlador, y verbo-->
    @using (Html.BeginForm("Index", "Movies", FormMethod.Get))
    {
<p>
    <!--Crea un dropdown con id movieGenre. Lo que seleccionemos aqui llegara al controlador con este parametro-->
    Category: @Html.DropDownList("movieGenre", "All")
    <!--Un text box con el id SearchString-->
    Title: @Html.TextBox("SearchString")
    <input type="submit" value="Filter" />
</p>
    }
</p>

    <table class="table">
        <tr>
            <th>
                <!--nombre del campo en el modelo-->
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th></th>
        </tr>
        <!--recupera los valores del modelo, que recordemos, es un iEnumerable-->
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
